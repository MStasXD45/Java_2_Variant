package Ad.Muzyka;

import java.util.GregorianCalendar;
import java.util.Scanner;

class Goods
{
    String name;
    double price;

    Goods()
    {
        name="N/A";
        price=0;

    }
    Goods(String n,double pr)
    {
        name=n;
        if(pr<0)
            price=0;
        else
            price=pr;
    }
    double encDeg(double deg)
    {
        double degr;
        degr=price*deg/100;
        price+=degr;
        return price;
    }
    double decDeg(double deg)
    {
        double degr;
        degr=price*deg/100;
        price-=degr;
        return price;
    }

}




